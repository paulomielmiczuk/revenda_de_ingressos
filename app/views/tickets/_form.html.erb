<div class="bg-white rounded p-4 shadow-sm">
  <%= simple_form_for @ticket do |f| %>
    <div class="form-group">
      <%= f.input :ticket_type, label: false, placeholder: 'Ticket type', input_html: { class: 'form-control' } %>
      <%= f.submit "Sell tickets", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
