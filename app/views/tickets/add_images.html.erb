<div class="container">
  <h2 class="mb-4">Envie seus tickets</h2>

  <% @tickets.each do |ticket| %>
    <%= simple_form_for ticket, url: upload_images_tickets_path(ticket), method: :patch, html: { multipart: true, class: 'needs-validation', novalidate: true } do |f| %>
      <div class='order-ticket'>
        <div class="order-ticket-infos">
          <div class="form-group">
            <%= f.input :photo, as: :file, label: "#{ticket.ticket_type.type_of_ticket} #{ticket.id}", input_html: { accept: 'image/*', class: 'form-control' } %>
            <%= f.hidden_field :ticket_id, value: ticket.id %>
          </div>
        </div>
      </div>
      <div class="mt-4">
        <%= f.submit 'Enviar arquivo', class: 'btn btn-primary' %>
      </div>
    <% end %>
  <% end %>
</div>
