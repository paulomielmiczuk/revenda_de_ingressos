<h1 class='mb-3'>My tickets</h1>

<div class="flexbox">
  <% if @tickets.any? %>
    <% @tickets.each do |ticket| %>
      <div class="card-trip">
        <div class="card-trip-infos">
          <div>
            <h2><%= ticket.event.title %></h2>
            <p><%= ticket.event.date %></p>
            <p><%= ticket.event.location %></p>
            <p><%= ticket.ticket_type %> - <%= humanized_money_with_symbol(ticket.price) %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No tickets found.</p>
  <% end %>
</div>
