<div class="container">
  <%= simple_form_for [@event, @post, @comment] do |f| %>
    <div class="form-group">
      <%= f.input :content, as: :text, label: false, input_html: { class: 'form-control' } %>
    </div>
    <div class="text-end">
      <%= f.button :submit, 'Comment', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
