<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-8 col-lg-6 mx-auto">
      <div class="bg-white rounded p-4 shadow-sm">
        <h2 class="mb-4 text-center">Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs mb-4">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: 'form-control' } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password", class: 'form-control' } %>
            <% if devise_mapping.rememberable? %>
              <%= f.input :remember_me, as: :boolean, label: "Remember me", class: 'form-check-input' %>
            <% end %>
          </div>

          <div class="form-actions text-center">
            <%= f.button :submit, "Log in", class: 'my_events btn-dark' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="text-center mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
