<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-8 col-lg-6 mx-auto">
      <div class="bg-white rounded p-4 shadow-sm">
        <h2 class="mb-4 text-center">Fa√ßa seu login</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name, redirect_to: request.referer)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs mb-4">
            <div class="form-group">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          label: "Email",
                          input_html: { autocomplete: "email", class: 'form-control' } %>
            </div>

            <div class="form-group">
              <%= f.input :password,
                          required: false,
                          label: "Senha",
                          input_html: { autocomplete: "current-password", class: 'form-control' } %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-group form-check">
                <%= f.input :remember_me,
                            as: :boolean,
                            label: "Lembrar de mim",
                            input_html: { class: 'form-check-input' },
                            wrapper_html: { class: 'form-check' } %>
              </div>
            <% end %>
          </div>

          <% hidden_field_tag request.referer %>

          <div class="form-actions text-center">
            <%= f.button :submit, "Entrar", class: 'btn btn-primary w-100' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="text-center mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
