<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">

  <%= link_to events_path, class: "navbar-brand" do %>
      <%# Imagem meramente ilustrativa. Trocar por logo depois %>
      <%= image_tag "https://static.vecteezy.com/system/resources/thumbnails/015/117/358/small_2x/ticket-icon-in-grey-colors-voucher-signs-illustration-png.png" %>
    <% end %>


    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="row justify-content-center">
    <div class="col-sm-8 my-3">
      <%= form_with url: events_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
            params[:query],
            class: "search form-control",
            placeholder: "Type something..."
        %>
      <%= submit_tag "Search", name: "", class: "search-btn btn btn-success" %>
      <% end %>
    </div>
    </div>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <div class='nav-link'>
              <%= current_user.name %>
            </div>
          </li>
          <li class="nav-item dropdown">
          <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, width: 40, height: 40, crop: :thumb, gravity: :face, class: "avatar", alt: "dropdown menu" %>
            <% else %>
              <%# image_tag "avatar.png", class: "avatar", alt: "dropdown menu"  %>
              ''
            <% end %>
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "My events", my_events_path, class: "dropdown-item" %>
              <%= link_to "My profile", user_path(current_user), class: "dropdown-item" %>
              <%= link_to "Edit profile", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
