<h1>Your Orders</h1>

<% if @orders.present? %>
  <ul>
    <% @orders.each do |order| %>
      <li>
        Ticket: <%= order.ticket.ticket_type %> - Quantity: <%= order.quantity %>
        <%= link_to 'Remove', order_path(order), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </li>
    <% end %>
  </ul>

   <%= link_to 'Checkout', checkout_path, data: { turbo_method: :patch, turbo_confirm: 'Are you sure?' }, class: 'btn btn-primary' %>
<% else %>
  <p>No orders to process.</p>
<% end %>
